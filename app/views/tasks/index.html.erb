<% if logged_in? %>
<p>ログイン状態のユーザー：<%= current_user.name %></p>

<h1>タスク管理一覧</h1>

<%= render 'tasks/tasks', tasks: @tasks %>

<%= link_to '新規タスクの作成', new_task_path , class: 'btn btn-primary' %>

<% else %>

<div>
  <p>ログインしてください。<%= link_to 'ログイン', login_path, class: 'btn btn-lg btn-primary' %></p>
  <p><%= link_to '新規登録の方はこちらへ', new_user_path , class: 'btn btn-primary' %></p>
</div>

<% end %>
